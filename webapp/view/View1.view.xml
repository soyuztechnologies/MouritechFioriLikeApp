<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
          controllerName="emc.fin.ar.controller.View1">
    <Page title="View 1">
        <headerContent>
            <Button icon="sap-icon://action" press="onNext" />
        </headerContent>
        <content>
            <SearchField id="idSearch" search="onSearch"></SearchField>
            <List id="idList" selectionChange="onNext" items="{path : '/fruits', sorter : { path : 'type', group : true }}" mode="SingleSelectMaster" delete="onDelete">
                <items>
                    <ObjectListItem intro="{type}" 
                    title="{name}" 
                    icon="{imageURL}" 
                    number="{price}" numberUnit="{currency}">
                        <firstStatus>
                            <ObjectStatus
                                text="{status}" state="{ path: 'status',
                                formatter: '.formatter.getStatus'}" />
                        </firstStatus>
                        <attributes>
                            <ObjectAttribute text="{color}" />
                        </attributes>
                    </ObjectListItem>
                </items>
            </List>
        </content>
    </Page>
</mvc:View>